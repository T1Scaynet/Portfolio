---
import Header from "@/Components/header/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Gustavo Chura || Full Stack Developer</title>
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="gustavo chura, fullstack developer, software engineer, desarrollador fullStack"
    />
    <meta name="description" content="Portafolio Personal" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <!-- <meta name="generator" content={Astro.generator} /> -->

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://imgustavochura.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Gustavo Chura" />
    <meta property="og:description" content="FullStack Developer | Software Engineer" />
    <meta property="og:image" content="public/images/logo/logo-dark.png" />

    <!-- Favicon -->
    <link
      rel="shortcut icon"
      type="image/x-icon"
      media="(prefers-color-scheme: light)"
      href="/images/logo/logo-dark.png"
    />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      media="(prefers-color-scheme: dark)"
      href="/images/logo/logo-light.png"
    />
    <!-- CSS 
    ============================================ -->
    <link rel="stylesheet" href="/css/vendor/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/vendor/slick.css" />
    <link rel="stylesheet" href="/css/vendor/slick-theme.css" />
    <link rel="stylesheet" href="/css/vendor/aos.css" />
    <link rel="stylesheet" href="/css/plugins/feature.css" />
    <!-- Style css -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body
    class="template-color-1 spybody"
    data-spy="scroll"
    data-target=".navbar-example2"
    data-offset="70"
  >
    <Header />

    <main class="main-page-wrapper">
      <slot />
    </main>

    <!-- JS ============================================ -->
    <script is:inline src="/js/vendor/jquery.js"></script>
    <script is:inline src="/js/vendor/modernizer.min.js"></script>
    <script is:inline src="/js/vendor/feather.min.js"></script>
    <script is:inline src="/js/vendor/slick.min.js"></script>
    <script is:inline src="/js/vendor/bootstrap.js"></script>
    <script is:inline src="/js/vendor/text-type.js"></script>
    <script is:inline src="/js/vendor/wow.js"></script>
    <script is:inline src="/js/vendor/aos.js"></script>
    <script is:inline src="/js/vendor/particles.js"></script>
    <!-- main JS -->
    <script is:inline src="/js/main.js"></script>
  </body>
</html>
